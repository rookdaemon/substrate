{
  "name": "substrate",
  "version": "0.2.0",
  "private": true,
  "description": "Self-Referential Agent Shell",
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "init": "tsx server/src/cli.ts init",
    "start": "npm run start --workspace=server",
    "server:start": "npm run start --workspace=server",
    "backup": "tsx server/src/cli.ts backup",
    "restore": "tsx server/src/cli.ts restore",
    "transfer": "tsx server/src/cli.ts transfer",
    "logs": "tsx server/src/cli.ts logs",
    "server:dev": "npm run dev --workspace=server",
    "client:dev": "npm run dev --workspace=client",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "build": "npm run build --workspaces --if-present"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
