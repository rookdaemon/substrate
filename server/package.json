{
  "name": "@substrate/server",
  "version": "0.2.16",
  "private": true,
  "description": "Substrate backend execution loop",
  "main": "dist/index.js",
  "scripts": {
    "init": "tsx src/cli.ts init",
    "start": "tsc || (echo '[supervisor] Build failed, recovering environment...' && . ~/.nvm/nvm.sh && nvm install --lts && nvm use --lts && npm install && tsc) || echo '[supervisor] Build failed, falling back to existing dist/' && node dist/supervisor.js",
    "dev": "tsx watch src/cli.ts start",
    "build": "node scripts/generate-version.js && tsc",
    "test": "jest",
    "backup": "tsx src/cli.ts backup",
    "restore": "tsx src/cli.ts restore",
    "transfer": "tsx src/cli.ts transfer",
    "logs": "tsx src/cli.ts logs",
    "lint": "eslint src/ tests/"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^25.2.2",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^10.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "~5.7"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.37",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@rookdaemon/agora": "^0.2.7",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "ws": "^8.19.0",
    "zod": "^4.3.6"
  }
}
